<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
    <link href="/admin/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

</head>
<body class="sb-nav-fixed">
    <partial name="_UstBar" />
    <div id="layoutSidenav">
        <partial name="_SolMenu" />
        <div id="layoutSidenav_content">
            <main role="main">
                <div class="container-fluid px-4">
                    <h1 class="mt-4">@ViewData["Title"]</h1>
                    @RenderBody()
                </div>
            </main>
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/admin/js/scripts.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <!-- sayfanın tüm içeriği -->

    @* Toast alanı *@
    @if (TempData["Success"] != null || TempData["Error"] != null)
    {
        <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1080;">
            <div class="toast show text-white bg-@(TempData["Success"] != null ? "success" : "danger") border-0 shadow-lg" role="alert">
                <div class="d-flex align-items-center">
                    <!-- İkon -->
                    <div class="me-3 ps-2 fs-4">
                        <i class="bi @(TempData["Success"] != null ? "bi-check-circle-fill" : "bi-x-circle-fill")"></i>
                    </div>

                    <!-- Mesaj -->
                    <div class="toast-body pe-2">
                        @((TempData["Success"] ?? TempData["Error"])?.ToString())
                    </div>

                    <!-- Kapat -->
                    <button type="button" class="btn-close btn-close-white me-2" data-bs-dismiss="toast" aria-label="Kapat"></button>
                </div>
            </div>
        </div>
    }
    <script>
        // otomatik gizlenme
        setTimeout(() => {
            const toastEl = document.querySelector('.toast');
            if (toastEl) {
                const toast = new bootstrap.Toast(toastEl);
                toast.hide();
            }
        }, 3000);
    </script>
</body>
</html>
