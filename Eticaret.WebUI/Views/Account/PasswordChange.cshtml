@{
    ViewData["Title"] = "Şifremi Unuttum";
}

<div class="row">
    <div class="col-md-4 m-auto my-5">
        <h1>Şifremi Unuttum</h1>
        <form asp-action="PasswordChange">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="user" value="@Context.Request.Query["user"]" />
            <div class="form-group">
                <label for="Password" class="control-label"></label>
                <input name="Password" class="form-control" type="password" required />
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Şifremi Değiştir" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>