@model Product

<style>
    .product-card {
        transition: all 0.3s ease;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        }
</style>


<div class="col mb-5">
    <div class="card h-100 border-6 shadow-sm product-card position-relative">
        <!-- Sale badge-->
        <div class="badge position-absolute" style="top: 0.5rem; right: 0.5rem">
            <form asp-action="Add" asp-controller="Favorites">
                <input type="hidden" name="ProductId" value="@Model.Id" />
                <button class="btn btn-light position-absolute top-0 end-0 m-2 rounded-circle shadow-sm" type="submit" style="box-shadow: none">
                    <i class="bi bi-heart text-danger"></i>
                </button>
            </form>
        </div>
        <!-- Product image-->
        <a href="/Products/Details/@Model.Id">
            <img class="card-img-top" src="~/Img/Products/@Model.Image" alt="@Model.Name">
        </a>
        <!-- Product details-->
        <div class="card-body p-4">
            <div class="text-center">
                <!-- Product name-->
                <h5 class="card-title fw-semibold text-truncate">@Model.Name</h5>
                <!-- Fiyat -->
                <p class="fw-bold text-primary mb-2">@Model.Price.ToString("N0") ₺</p>
            </div>
        </div>
        <!-- Product actions-->
        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
            <form action="/Cart/Add" method="post">
                <input type="hidden" name="ProductId" value="@Model.Id" />
                <div class="text-center"><button class="btn btn-outline-primary mt-auto" type="submit">
                        <i class="bi-cart-fill me-1"></i> Sepete Ekle
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>