@model Product

<style>
    .product-card {
        transition: all 0.3s ease;
    }

        .product-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

    .price {
        font-weight: 600;
        color: #28a745;
    }

    .name {
        font-size: 1rem;
        font-weight: 500;
    }
</style>

<div class="col mb-4">
    <div class="card h-100 shadow-sm border-0 product-card">
        <div class="position-relative">
            <a href="/Products/Details/@Model.Id">
                <img class="card-img-top product-img" src="~/Img/Products/@Model.Image" alt="@Model.Name" />
            </a>
            <form asp-action="Add" asp-controller="Favorites" class="position-absolute top-0 end-0 m-2">
                <input type="hidden" name="ProductId" value="@Model.Id" />
                <button class="btn btn-light btn-sm rounded-circle shadow-sm" type="submit" title="Favorilere Ekle">
                    <i class="bi bi-heart text-danger"></i>
                </button>
            </form>
        </div>
        <div class="card-body text-center">
            <h6 class="name text-truncate">@Model.Name</h6>
            <div class="price">@Model.Price.ToString("C2")</div>
        </div>
        <div class="card-footer bg-white border-0 text-center">
            <form asp-action="Add" asp-controller="Cart">
                <input type="hidden" name="ProductId" value="@Model.Id" />
                <button type="submit" class="btn btn-sm btn-outline-primary w-100">Sepete Ekle</button>
            </form>
        </div>
    </div>
</div>
